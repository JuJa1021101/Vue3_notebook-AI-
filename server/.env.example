NODE_ENV=development
PORT=5000

# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_NAME=personal_notes
DB_USER=root
DB_PASSWORD=your_database_password

# JWT配置
JWT_SECRET=your_jwt_secret_key
