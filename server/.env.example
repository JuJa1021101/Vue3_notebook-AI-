NODE_ENV=development
PORT=3000

# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_NAME=personal_notes
DB_USER=root
DB_PASSWORD=your_database_password

# JWT配置
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=7d

# 文件上传配置
UPLOAD_PATH=./uploads
# 最大文件大小（字节），默认 50MB
MAX_FILE_SIZE=52428800
# 允许的图片类型（MIME类型，逗号分隔）
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/gif,image/webp
# 注意：系统会自动拒绝可执行文件（.exe, .bat, .sh, .php 等）以确保安全

# 阿里云 OSS 配置
OSS_REGION=oss-cn-hangzhou
OSS_ACCESS_KEY_ID=your_oss_access_key_id
OSS_ACCESS_KEY_SECRET=your_oss_access_key_secret
OSS_BUCKET=vue3-koa2-notebook
OSS_ENDPOINT=oss-cn-hangzhou.aliyuncs.com
# 存储模式：local(本地) 或 oss(阿里云OSS)
STORAGE_MODE=local

# 日志配置
# 日志级别：ERROR（仅错误）、WARN（警告+错误）、INFO（信息+警告+错误）、DEBUG（全部日志）
# 生产环境建议使用 ERROR 或 WARN，开发环境可使用 INFO 或 DEBUG
LOG_LEVEL=INFO

# AI 服务配置（通义千问 - 硅基流动）
QWEN_API_KEY=your_qwen_api_key_here
QWEN_BASE_URL=https://api.siliconflow.cn/v1
QWEN_MODEL=Qwen/Qwen2-1.5B-Instruct
QWEN_MAX_TOKENS=4096
# AI 请求超时时间（毫秒），建议 60-90 秒
AI_REQUEST_TIMEOUT=90000
